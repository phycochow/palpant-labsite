# if file already present - sudo rm /etc/nginx/sites-enabled/flaskapp /etc/nginx/sites-available/flaskapp

# sudo cp flaskapp "/etc/nginx/sites-available/"
# then do: sudo ln -s /etc/nginx/sites-available/flaskapp /etc/nginx/sites-enabled/
# then check for errors: sudo nginx -t
# then: sudo systemctl restart nginx

server {
    listen 80;
    server_name palpantlab.com 13.213.1.161 _;

    # Proxy to Flask/Gunicorn
    location / {
        proxy_pass http://127.0.0.1:8000;
        include proxy_params;
        proxy_redirect off;

        # Connection timeouts
        proxy_connect_timeout 5s;
        proxy_send_timeout 10s;
        proxy_read_timeout 10s;

        # Buffer size tuning
        proxy_buffering on;
        proxy_buffers 8 16k;
        proxy_buffer_size 32k;
    }

    # Labsite static files
    location /static/labsite/ {
        alias /home/ubuntu/palpant-labsite/labsite/static/;
        access_log off;
        expires 2d;
        add_header Cache-Control "public";
    }

    # Dashboard core static files
    location /static/dashboard/ {
        alias /home/ubuntu/palpant-labsite/dashboard/core/static/;
        access_log off;
        expires 2d;
        add_header Cache-Control "public";
    }

    # CMPortal static files
    location /static/cmportal/ {
        alias /home/ubuntu/palpant-labsite/dashboard/tools/cmportal/static/;
        access_log off;
        expires 2d;
        add_header Cache-Control "public";
    }
}
